<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:QuantTrader.ViewModels"
        xmlns:sidebar="clr-namespace:QuantTrader.Views.Sidebar"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="QuantTrader.Views.MainWindow"
        Icon="/Assets/logo.ico"
        Title="Quant Trader"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent">
    
    <Design.DataContext>
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>
    
    <SplitView IsPaneOpen="True"
               DisplayMode="Inline"
               OpenPaneLength="250">
        <SplitView.Pane>
            <sidebar:SidebarControl DataContext="{Binding SidebarViewModel}"/>
        </SplitView.Pane>
        <SplitView.Content>
            <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </SplitView.Content>
    </SplitView>

</Window>
